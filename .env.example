# Django基本設定
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# データベース設定
# 開発環境: sqlite:///path/to/db.sqlite3
# 本番環境: postgres://user:password@localhost:5432/kokkosofter
DATABASE_URL=sqlite:///db.sqlite3

# 静的ファイル・メディアファイル設定
STATIC_ROOT=/var/www/kokkosofter/staticfiles
MEDIA_ROOT=/var/www/kokkosofter/media

# ログ設定
LOG_FILE=/var/log/kokkosofter/django.log
DJANGO_LOG_LEVEL=INFO

# セキュリティ設定（本番環境でのみ有効）
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# 外部API設定（必要に応じて）
WEATHER_API_KEY=your-weather-api-key-here
