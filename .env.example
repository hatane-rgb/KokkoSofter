# Django基本設定
# 注意: SECRET_KEYは本番環境では必ず変更してください
# make generate-secret-key または make dev-setup で自動生成されます
SECRET_KEY=your-secret-key-here-change-this-in-production

# デバッグモード（本番環境では必ずFalse）
DEBUG=False

# ALLOWED_HOSTS: アクセス許可するドメイン/IPアドレス（カンマ区切り）
# 開発環境例: localhost,127.0.0.1,0.0.0.0
# 本番環境例: 192.168.1.8,er.kokkosoft.com,www.er.kokkosoft.com
# make configure-domain で対話式設定、または手動編集
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CSRF_TRUSTED_ORIGINS: CSRF検証で許可するオリジン（カンマ区切り）
# HTTPSでアクセスする場合は必須設定
# 例: https://er.kokkosoft.com,http://er.kokkosoft.com,http://192.168.1.8
CSRF_TRUSTED_ORIGINS=

# データベース設定
# 開発環境: sqlite:///./db.sqlite3
# 本番環境（PostgreSQL推奨）: postgres://user:password@localhost:5432/kokkosofter
# 本番環境（MySQL）: mysql://user:password@localhost:3306/kokkosofter
DATABASE_URL=sqlite:///./db.sqlite3

# 静的ファイル・メディアファイル設定
# 開発環境では相対パス、本番環境では絶対パスを推奨
STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# ログ設定
LOG_FILE=django.log
DJANGO_LOG_LEVEL=INFO

# セキュリティ設定（本番環境用）
# HTTPSリダイレクト（SSL証明書取得後にTrueに変更）
SECURE_SSL_REDIRECT=False
# HSTS設定（HTTPS運用時のみ有効）
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
# その他セキュリティ設定
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# セッション・Cookie設定（HTTPSでない場合はFalse）
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# 外部API設定（必要に応じて）
WEATHER_API_KEY=your-weather-api-key-here

# 本番環境設定例（コメントアウト）
# 本番環境では以下の設定を有効化してください：
# DEBUG=False
# ALLOWED_HOSTS=192.168.1.8,er.kokkosoft.com
# DATABASE_URL=postgres://kokkosofter_user:your_password@localhost:5432/kokkosofter
# STATIC_ROOT=/var/www/kokkosofter/staticfiles
# MEDIA_ROOT=/var/www/kokkosofter/media
# LOG_FILE=/var/log/kokkosofter/django.log
# SECURE_SSL_REDIRECT=True（SSL証明書取得後）
# SECURE_HSTS_SECONDS=31536000（HTTPS運用時）
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True（HTTPS運用時）
# SECURE_HSTS_PRELOAD=True（HTTPS運用時）
# SESSION_COOKIE_SECURE=True（HTTPS運用時）
# CSRF_COOKIE_SECURE=True（HTTPS運用時）
